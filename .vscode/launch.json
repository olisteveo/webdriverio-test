{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "WebdriverIO Debug",
      "program": "${workspaceFolder}/node_modules/.bin/wdio",
      "args": ["run", "wdio.conf.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
